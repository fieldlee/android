<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/cell_no_picture_title"
            android:layout_width="match_parent"
            android:typeface="normal"
            android:textColor="@color/bpblack"
            android:textSize="@dimen/news_title"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

        <LinearLayout
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.makeramen.roundedimageview.RoundedImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/cell_no_picture_avator"
                android:scaleType="fitCenter"
                app:riv_corner_radius="15dip"
                android:layout_width="30dp"
                android:layout_height="30dp" />
            <TextView
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:id="@+id/cell_no_picture_subtitle"
                android:textSize="@dimen/news_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        </LinearLayout>


    </LinearLayout>


</LinearLayout>