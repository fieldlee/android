<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="55dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/setup_info_icon"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="0dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_github_circle_white_24dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical"
            android:id="@+id/setup_info_itemname"
            android:layout_marginLeft="50dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/news_subtitle"
            android:textColor="@color/bpDark_gray"
            android:text="Text"
            />


        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginTop="18dp"
            android:scaleType="centerCrop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/left_more"
            />
    </RelativeLayout>


</LinearLayout>