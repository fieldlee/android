<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/forumcontext_header_title"
        android:textSize="@dimen/news_title"
        android:textColor="@color/bpblack"
        android:text="djfalsjflasdjfklajksdlfjklasjdf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/forumcontext_header_avatorImage"
            app:riv_corner_radius="15dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="fieldlee"
            android:gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:id="@+id/forumcontext_header_avator"
            android:textColor="@color/bpDark_gray"
            android:textSize="@dimen/news_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:layout_marginLeft="20dp"
            android:text="+关注"
            android:textSize="@dimen/news_subtitle"
            android:textColor="@color/bpWhite"
            android:id="@+id/forumcontext_header_attend"
            android:background="@color/blue"
            android:layout_width="50dp"
            android:layout_height="30dp" />

    </LinearLayout>

</LinearLayout>